@{
}
<div class="text-center">
    <h1 class="text-center">Update your Tour</h1>
    <form asp-controller="Travel" asp-action="Update" method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>

        <label asp-for="Start_Date"></label>
        <input class="form-control" asp-for="Start_Date" />
        <span class="text-danger" asp-validation-for="Start_Date"></span>

        <label asp-for="End_Date"></label>
        <input class="form-control" asp-for="End_Date" />
        <span class="text-danger" asp-validation-for="End_Date"></span>

        <label asp-for="Start_Place"></label>
        <input class="form-control" asp-for="Start_Place" />
        <span class="text-danger" asp-validation-for="Start_Place"></span>

        <label asp-for="End_Place"></label>
        <input class="form-control" asp-for="End_Place" />
        <span class="text-danger" asp-validation-for="End_Place"></span>

        <label asp-for="Participants"></label>
        <input class="form-control" asp-for="Participants" />
        <span class="text-danger" asp-validation-for="Participants"></span>

        <label asp-for="Guide"></label>
        <input class="form-control" asp-for="Guide" />
        <span class="text-danger" asp-validation-for="Guide"></span>
        <div class="btn-group" style="padding-top : 5px">
           
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-primary">Go Back</a>
        </div>
    </form>

</div>